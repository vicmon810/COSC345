/* Push button styling */
QPushButton {
    background-color: #9e9e9e;
    color: #700101;
    font-size: medium;
    border-radius: 15px;
}

QPushButton:hover {
    background-color: #42041c;
    font-size: medium;
    color: #6b1111;
}

/* Label styling */
QLabel {
    color: #FFFFFF;
    font-size: 14px;
    border: #3e1010;
}

/* Scroll area styling */
QScrollArea {
    border-radius: 15px;
    background-color: antiquewhite;
}

/* Menu bar styling */
QMenuBar {
    background-color: #DCDCDC;
    color: #333333;
}

/* Menu styling */
QMenu {
    background-color: #FFFFFF;
    color: #333333;
    border: 1px solid #CCCCCC;
    padding: 5px;
    border-radius: 3px;
}